<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<h1>Registration</h1>
  <form action="/users/create" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>First Name:</label><br>
    <input type="text" name="user[first_name]" placeholder="first name"><br>
    <label>Last Name:</label><br>
    <input type="text" name="user[last_name]" placeholder="last name"><br>
    <label>Email:</label><br>
    <input type="text" name="user[email]" placeholder="email"><br>
    <label>City:</label><br>
    <input type="text" name="user[city]" placeholder="city"><br>
    <label>State:</label><br>
    <select name="user[state]">
      <option value="OH">OH</option>
      <option value="IL">IL</option>
      <option value="IN">IN</option>
      <option value="KY">KY</option>
      <option value="MI">MI</option>
    </select><br>
    <label>Password:</label><br>
    <input type="password" name="user[password]" placeholder="password"><br>
        <p><i>*Password must be at least 8 characters!*</i></p>
    <label>Confirm Password:</label><br>
    <input type="password" name="user[password_confirmation]" placeholder="confirm password"><br>
    <input type="submit" value="Register">
  </form>

<h1>Login</h1>
  <form action="/users/authenticate" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Email:</label><br>
    <input type="text" name="email" placeholder="email"><br>
    <label>Password:</label><br>
    <input type="password" name="password" placeholder="password"><br>
    <input type="submit" value="Login">
  </form>
